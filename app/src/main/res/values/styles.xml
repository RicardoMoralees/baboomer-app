<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/greenblue</item>
        <item name="colorPrimaryDark">@color/greenblue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="bienvenido">
        <item name="android:fontFamily">CircularStd-Bold</item>
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">32sp</item>
        <item name="android:lineSpacingMultiplier">1.19</item>
    </style>

    <style name="estanciaInfantil">
        <item name="android:fontFamily">CircularStd-Bold</item>
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingMultiplier">1.21</item>
    </style>

    <style name="anuncioTitle">
        <item name="android:fontFamily">CircularStd-Bold</item>
        <item name="android:textColor">#FF1E1E1E</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.19</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name ="android:windowBackground"> @drawable/splash_screen_background</item>
    </style>

</resources>
